<div class="new_cocktail_form">
  <%= form_for @cocktail do |f| %>
    <%= f.label :cocktail_name %>:
    <%= f.text_field :name, value: "Some Cocktail" %>
    <br>
    <%= f.label :description %>:
    <%= f.text_field :description, value: "Some Description" %>
    <br>
    <%= f.label :instructions %>:
    <%= f.text_area :instructions, cols: '20', rows: '5', value: "Some Instructions" %>
    <br>
    <%= f.label :photo %>:
    <%= cloudinary_js_config %> 
    <%= f.cl_image_upload(:image_id) %>

    <div class="ingredients_wrapper">
      <%= f.fields_for :ingredients do |builder| %>
        <%= render 'ingredient', f: builder %>
      <% end %>
    </div>
    <%= link_to_add_fields "Add Ingredient", f , :ingredients %>
    <br>
    <%= f.submit %>
  <% end %>
</div>
