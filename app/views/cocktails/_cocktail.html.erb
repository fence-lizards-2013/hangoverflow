<% size = [[200,200],[200,300],[300,200]].sample %>

<div class="cocktail">
  <%= cl_image_tag(cocktail.image_id, width: size[0], height: size[1], :crop => :fill) %>
  <div class="options">
    <div class="name pull-left"><%= cocktail.name %></div>
    <!-- <div class="hide">Remove</div> -->
    <div class="votes pull-right"><%= cocktail.votes.count %> Votes</div>
  </div>
</div>
