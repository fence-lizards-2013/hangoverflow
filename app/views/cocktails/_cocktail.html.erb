<% size = [[200,200],[200,300],[300,200]].sample %>

<div class="cocktail">
  
  <%= cl_image_tag(cocktail.image_id, width: size[0], height: size[1], :crop => :fill) %>
  <div class="name">
    <%= cocktail.name %>
  </div>

  <div class="votes">
    <%= cocktail.votes.count %> Votes
  </div>

  <div class="hide">
    Hide
  </div>
    
  <%= link_to cocktail_path(cocktail) do %>
  <% end %>
</div>
